<configuration>

    <appender name = "myConsoleAppender" class = "ch.qos.logback.core.ConsoleAppender">

        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread]  %-5level %logger{36} -- %msg %n
<!--                -> % d = date, {HH:mm:ss.SSS}=Hour, minute, second; %thread = thread , %-5level = 5 character log level (-towards right side character of logs level)-->
<!--                %logger{36} = 36 character log information, &#45;&#45; = nothing just space, %msg = message, %n = new line-->

            </pattern>
        </encoder>
    </appender>

<!--    <appender name = "myFileAppender" class = "ch.qos.logback.core.FileAppender">-->
    <appender name = "myFileAppender" class = "ch.qos.logback.core.rolling.RollingFileAppender">

        <file>
            journalApp.log
        </file>

        <rollingPolicy class = "ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>journalApp-%d{yy-MM-dd_HH-mm}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory> 10 </maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread]  %-5level %logger{36} -- %msg %n
            </pattern>
        </encoder>

<!--        <file>-->
<!--            journalApp.log--> <!-- uses for normal file appender -->
<!--        </file>-->

    </appender>

    <root level = "INFO">
        <appender-ref ref ="myConsoleAppender"/>
        <appender-ref ref ="myFileAppender"/>
    </root>
</configuration>